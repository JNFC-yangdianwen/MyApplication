<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="联 系 人  :  "
            android:textColor="#fff"
            tools:ignore="RtlSymmetry" />

        <EditText
            
            android:maxLength="15"
            android:textColor="#fff"
            android:id="@+id/tv_name"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null" />
    </LinearLayout>

    <View style="@style/horizontal_thread" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="电     话   :  "
            android:textColor="#fff"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="#fff"
            android:id="@+id/tv_phone"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null" />
    </LinearLayout>

    <View style="@style/horizontal_thread" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="收货地址  :  "
            android:textColor="#fff"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:maxLength="100"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:textColor="#fff"
            android:id="@+id/tv_addr_map"
            android:layout_width="60dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null" />
    </LinearLayout>
    <View style="@style/horizontal_thread" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

     

        <EditText
            android:maxLength="80"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textColor="#fff"
            android:id="@+id/et_detailed_address"
            android:layout_width="60dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null" 
            android:textColorHint="#99ffffff"
            android:hint="  (详细地址，必填)"/>
    </LinearLayout>

    <View style="@style/horizontal_thread" />
    
                <LinearLayout
            android:layout_marginTop="30dp"
            android:id="@+id/ll_info_exit"
            android:layout_width="fill_parent"
            android:layout_height="65.0dip"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_sub_addr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/bg_white_side"
                android:text="确    定"
                android:textColor="#FFFFFF" />
        </LinearLayout>

</LinearLayout>